<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <h1>
      <%= @material.title %></h1>
      <% if @current_user[:kind] == 'admin' %>
        <p>
          <%= link_to "Edit", edit_material_path %> |
          <%= link_to "Manage Access", user_share_path( @current_user.id,@material.id )%> |
          <%= link_to "View All Materials", materials_path %>
        </p>
      <% end %>

    <span class="label label-default"><%= @material.kind %></span>
    <div class="row">
    <hr>
      <div class="froala-view no-select">
        <% if @material.kind == "article" %>
          <%= raw @material.body %>
        <% elsif @material.kind == "pdf" %>
          <p><a href="<%= @material.body %>" target="_blank">Download PDF</a></p>
          <object data="<%= @material.body %>" type="application/pdf" width="100%" height="1000px">
            <p>It appears you don't have a PDF plugin for this browser.
              No biggie... you can <a href="<%= @material.body %>">click here to
              download the PDF file.</a>
            </p>
          </object>
        <% end %>
      </div>
    </div>
  </div>
</div>